<div class="d-flex justify-content-between">
  <div class="my-1">
    <%= link_to "< Home", nil, class: "btn btn-dark" %>
    <%= link_to "Authors >", authors_path, class: "btn btn-dark" %>
    <%= link_to "+ Create Article", new_article_path, class: "btn btn-danger" %>
  </div>
  <div class="my-1">
    <h1>//Articles</h1>
  </div>
</div>
<table class="table table-md table-rounded table-striped">
  <thead class="thead-dark">
    <tr class="text-center">
      <th scope="col">ID</th>
      <th scope="col">TITLE</th>
      <th scope="col">AUTHOR</th>
      <th scope="col">POST</th>
      <th scope="col">ACTIONS</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.author&.full_name %></td>
        <td><%= truncate(article.post, length: 100) %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to "Detail", article_path(article), class: "btn btn-outline-dark btn-sm" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-dark btn-sm" %>
            <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure, you want to delete the article?"}, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
